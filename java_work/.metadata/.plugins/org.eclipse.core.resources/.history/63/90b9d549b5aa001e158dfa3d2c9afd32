package ex04;

public class Ex07 {
	public static void main(String[] args) {
		String str1 = "He22oWor2d";
		String str2 = "lloWorl";
		char[] cs1;
		char[] cs2;
		int s = 2;
		
		for(int i = 0; i < str1.length(); i++) {			
				cs1 = str1.toCharArray();
				cs2 = str2.toCharArray();
				if(cs1[i] == s) {
					cs1[i] += cs2[i];
					str1 += cs1[i];
					
					System.out.println(str1);
				}				
				}
		}
}
